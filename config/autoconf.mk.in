# @configure_input@

XPI_MODULE_VERS = @PACKAGE_VERSION@

PERL = @PERL@
PYTHON = @PYTHON@

TB_PATH = "@TB_PATH@"
TB_ARGS = @TB_ARGS@

TESTS = @enable_tests@
FIX_LANGUAGES = @enable_fix_lang@
ENABLE_LANG = @enable_lang@
ENABLE_POSTBOX = @enable_postbox@
ENABLE_INTERLINK = @enable_interlink@

srcdir = @srcdir@

JSUNIT = $(DEPTH)/util/run-jsunit $(PERL) $(TB_PATH) $(TB_ARGS)

ifeq ($(ENABLE_POSTBOX),yes)
TARGET_TOOL=pbx
INCLUDE = $(DEPTH)/include/postbox.h
BUILD = $(DEPTH)/build-pbx
else
ifeq ($(ENABLE_INTERLINK),yes)
TARGET_TOOL=itl
INCLUDE = $(DEPTH)/include/interlink.h
BUILD = $(DEPTH)/build-itl
else
TARGET_TOOL=tbird
INCLUDE = $(DEPTH)/include/tbird.h
BUILD = $(DEPTH)/build-tb
endif
endif

DIST = $(BUILD)/dist
